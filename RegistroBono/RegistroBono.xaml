<Window x:Class="SiasoftAppExt.RegistroBono"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SiasoftAppExt"
             Width="500" Height="300" Title="Bonos">
    
    <Grid Margin="50">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Button x:Name="BtnRegistrar" Background="#03A9F4" BorderBrush="{x:Null}" Margin="10" Content="Registrar Bono" Foreground="White" FontSize="16" Cursor="Hand" Click="BtnRegistrar_Click"/>
        <Button x:Name="BtnConsultar" Grid.Row="1" Background="#03A9F4" BorderBrush="{x:Null}" Margin="10" Content="Consultar Bonos" Foreground="White" FontSize="16" Click="BtnConsultar_Click" Cursor="Hand"/>
    </Grid>
    
</Window>
